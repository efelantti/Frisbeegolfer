<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_800</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?backgroundColor</item>
    </style>

    <style name="PlusMinusButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconSize">30dp</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.Frisbeegolfer.Button.Circle
        </item>
    </style>

    <style name="CellText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="ColumnHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="CornerHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="RowHeader_HoleNumber_Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="header_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/white_60</item>
    </style>

    <style name="corner_line_right">
        <item name="android:background">@color/white_60</item>
    </style>

    <style name="corner_line_bottom">
        <item name="android:background">@color/white_60</item>
    </style>

    <style name="row_line">
        <item name="android:background">@color/white_60</item>
    </style>

    <style name="high_emphasis_text">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="high_emphasis_h4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="high_emphasis_h5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="high_emphasis_h6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="high_emphasis_body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="medium_emphasis_text">
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="medium_emphasis_label" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="medium_emphasis_body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white_60</item>
    </style>
</resources>