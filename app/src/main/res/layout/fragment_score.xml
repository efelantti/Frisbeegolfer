<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentGame">

    <Button
        android:id="@+id/fragment_score_previousHole"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="30sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_currentHole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1" />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="60sp"
        android:id="@+id/fragment_score_currentHole"
        app:layout_constraintTop_toTopOf="@id/fragment_score_previousHole"
        app:layout_constraintStart_toEndOf="@id/fragment_score_previousHole"
        app:layout_constraintEnd_toEndOf="@id/fragment_score_nextHole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2" />

    <Button
        android:id="@+id/fragment_score_nextHole"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="30sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/fragment_score_previousHole"
        app:layout_constraintStart_toEndOf="@id/fragment_score_currentHole"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3" />

    <Button
        android:id="@+id/fragment_score_button_previous_player"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@drawable/ic_baseline_arrow_back_60"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/fragment_score_currentPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_currentPlayer"
        app:layout_constraintHorizontal_weight="1" />

    <TextView
        android:id="@+id/fragment_score_currentPlayer"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_score_currentHole"
        app:layout_constraintStart_toEndOf="@id/fragment_score_button_previous_player"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_next_player"
        app:layout_constraintHorizontal_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_score_currentPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/contentDescription_player_initial_image" />

    <Button
        android:id="@+id/fragment_score_button_next_player"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@drawable/ic_baseline_arrow_forward_60"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/fragment_score_currentPlayer"
        app:layout_constraintStart_toEndOf="@id/fragment_score_currentPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <TextView
        android:id="@+id/fragment_score_currentHolePar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Par: 3" />

    <TextView
        android:id="@+id/fragment_score_currentHoleBest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Best: 2" />

    <TextView
        android:id="@+id/fragment_score_currentHoleAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Average: 3.4" />

    <TextView
        android:id="@+id/fragment_score_currentHoleLatest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Latest: 3" />

    <Button
        android:id="@+id/fragment_score_button_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/fragment_score_button_4"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_5"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_4"
        tools:text="1" />

    <Button
        android:id="@+id/fragment_score_button_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@id/fragment_score_button_1"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_6"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_5"
        tools:text="2" />

    <Button
        android:id="@+id/fragment_score_button_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@id/fragment_score_button_2"
        app:layout_constraintEnd_toEndOf="@id/fragment_score_button_6"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_6"
        tools:text="3" />

    <Button
        android:id="@+id/fragment_score_button_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/fragment_score_button_ob"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_5"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_ob"
        tools:text="4" />

    <Button
        android:id="@+id/fragment_score_button_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_6"
        app:layout_constraintStart_toStartOf="@id/fragment_score_button_more"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_more"
        tools:text="5" />

    <Button
        android:id="@+id/fragment_score_button_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/fragment_score_button_dnf"
        app:layout_constraintEnd_toEndOf="@id/fragment_score_button_dnf"
        app:layout_constraintBottom_toTopOf="@id/fragment_score_button_ob"
        tools:text="6" />

    <Button
        android:id="@+id/fragment_score_button_ob"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_more"
        app:layout_constraintTop_toTopOf="@id/fragment_score_button_dnf"
        tools:text="OB" />

    <Button
        android:id="@+id/fragment_score_button_more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toEndOf="@id/fragment_score_button_ob"
        app:layout_constraintEnd_toStartOf="@id/fragment_score_button_dnf"
        app:layout_constraintTop_toTopOf="@id/fragment_score_button_dnf"
        tools:text="more" />

    <!-- TODO - How to make sure buttons won't take whole screen on wider devices? -->
    <Button
        android:id="@+id/fragment_score_button_dnf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_score_button_more"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="DNF" />

</androidx.constraintlayout.widget.ConstraintLayout>