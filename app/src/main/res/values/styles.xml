<resources>
    <!-- Base application theme. -->
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">?attr/colorPrimaryDark</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <!-- Translucent style -->
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="MinusButton" parent="PlusMinusButton">
        <item name="icon">@drawable/ic_minus_decrement</item>
    </style>

    <style name="PlusButton" parent="PlusMinusButton">
        <item name="icon">@drawable/ic_plus_increment</item>
    </style>

    <style name="PlusMinusButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconSize">30dp</item>
        <item name="iconTint">?colorPrimaryDark</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.Frisbeegolfer.Button.Circle
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.Frisbeegolfer.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThrowResultButton" parent="" />

    <style name="TableListItem">
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">?attr/textAppearanceBody1</item>
    </style>

    <style name="CellFrame">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="CellTextViewStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CellText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="ColumnHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="CornerHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="RowHeader_HoleNumber_Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="RowHeader_Par_Text" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/black_60</item>
    </style>

    <style name="corner_line_right">
        <item name="android:background">@color/black_60</item>
    </style>

    <style name="corner_line_bottom">
        <item name="android:background">@color/black_60</item>
    </style>

    <style name="row_line">
        <item name="android:background">@color/black_60</item>
    </style>

    <style name="score_button_result_text_style">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="score_button_scoring_term_text_style">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="high_emphasis_text">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="high_emphasis_h4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="high_emphasis_h5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="high_emphasis_h6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="high_emphasis_body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="medium_emphasis_label" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="medium_emphasis_text">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="medium_emphasis_body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/black_60</item>
    </style>
</resources>